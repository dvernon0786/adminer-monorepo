  "patterns": [
    {
      "id": "PLACEHOLDER_GENERIC",
      "regex": "(YOUR_|REPLACE_ME|<TO_BE_FILLED>|TBD|CHANGEME|__PLACEHOLDER__|FILL_ME_IN|UPDATE_THIS)"
    },
    {
      "id": "TODO_FIXME",
      "regex": "\\b(TODO|FIXME|HACK|XXX)\\b"
    },
    {
      "id": "CLERK_KEYS",
      "regex": "(?<![A-Za-z0-9])(?:pk|sk)[-_][A-Za-z0-9_-]{12,}(?![A-Za-z0-9_-])"
    },
    {
      "id": "OPENAI_KEY",
      "regex": "\\bsk-[A-Za-z0-9]{20,}\\b"
    },
    {
      "id": "GOOGLE_API",
      "regex": "\\bAIza[0-9A-Za-z\\-_]{35}\\b"
    },
    {
      "id": "AWS_KEY",
      "regex": "\\bAKIA[0-9A-Z]{16}\\b"
    },
    {
      "id": "GITHUB_TOKEN",
      "regex": "\\bghp_[A-Za-z0-9]{30,}\\b"
    },
    {
      "id": "SLACK_BOT",
      "regex": "\\bxoxb-[0-9A-Za-z\\-]{20,}\\b"
    },
    {
      "id": "PRIVATE_KEY",
      "regex": "-----BEGIN (RSA|PRIVATE|OPENSSH) KEY-----"
    },
    {
      "id": "DB_URLS",
      "regex": "\\b(postgres|mysql|mongodb\\+srv|redis|amqp|kafka|smtp)://[^\\s\"']+"
    },
    {
      "id": "JWT_BEARER",
      "regex": "\\bBearer\\s+[A-Za-z0-9\\-_.]+\\b"
    },
    {
      "id": "HARDCODED_TOKEN_WORD",
      "regex": "\\b(token|secret|password|passwd|apikey|api_key|apiKey)\\s*[:=]\\s*['\\\"][^'\\\"]{8,}['\\\"]"
    },
    {
      "id": "ENV_INLINE",
      "regex": "process\\.env\\.[A-Z0-9_]+\\s*\\|\\|\\s*['\\\"][^'\\\"]+['\\\"]"
    },
    {
      "id": "LOCAL_PATHS",
      "regex": "(/Users/[^\\s\"']+|C:\\\\Users\\\\[^\\s\"']+)"
    },
    {
      "id": "HARDCODED_URL",
      "regex": "\\bhttps?://(localhost|127\\.0\\.0\\.1|[^\\s\"']+)\\b"
    },
    {
      "id": "MAGIC_NUMBER_LONG",
      "regex": "(?<![A-Za-z0-9_])(\\d{6,})(?![A-Za-z0-9_])"
    },
    {
      "id": "DODO_KEYS",
      "regex": "\\b(dodo_test_|dodo_live_)[A-Za-z0-9_]+\\b"
    },
    {
      "id": "NEON_DB_URL",
      "regex": "\\bneondb_[a-z0-9]+_[a-z0-9]+\\b"
    }
  ]
}
