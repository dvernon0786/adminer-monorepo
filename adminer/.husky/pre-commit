#!/usr/bin/env sh

echo "🔎 Running hardcoded value scan..."
npm run scan:hardcoded

if [ $? -ne 0 ]; then
  echo "❌ Hardcoded values detected! Commit blocked."
  echo "💡 Fix the issues above or add legitimate strings to whitelist."
  exit 1
fi

echo "✅ Hardcoded scan passed. Proceeding with commit..."
