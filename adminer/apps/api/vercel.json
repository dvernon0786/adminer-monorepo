{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/**/*.ts": {
      "runtime": "nodejs20.x"
    },
    "src/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "output": "standalone"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|_next|assets|favicon.ico|robots.txt|sitemap.xml).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/((?!api|_next|assets|favicon.ico|robots.txt|sitemap.xml).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ]
}
