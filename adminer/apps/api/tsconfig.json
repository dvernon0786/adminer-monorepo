{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/db": ["src/db"],
      "@/db/*": ["src/db/*"]
    },
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "src/**/*", "lib/**/*", "pages/**/*", "app/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    "tests/**/*",
    "vitest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "drizzle/**",
    "scripts/**"
  ]
}
