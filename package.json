{
  "name": "adminer",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run -w @adminer/web build && npm run -w @adminer/api build",
    "dev:api": "npm run -w @adminer/api dev",
    "dev:web": "npm run -w @adminer/web dev",
    "guard": "node scripts/guard.js",
    "scan:hardcoded": "tsx tools/hardcoded-scan.ts",
    "scan:hardcoded:diff": "tsx tools/hardcoded-scan.diff.ts",
    "setup:husky": "node scripts/setup-husky.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:billing": "vitest run",
    "test:billing:watch": "vitest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^15.5.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
