{
  "name": "adminer-final",
  "version": "1.0.0",
  "description": "Adminer Final Project",
  "scripts": {
    "debug:clerk": "node scripts/debug-clerk.mjs",
    "smoke": "scripts/smoke.sh",
    "smoke:local": "source scripts/smoke-local.env && scripts/smoke.sh",
    "smoke:help": "echo 'Smoke testing commands: npm run smoke, npm run smoke:local'",
    "test:endpoints": "scripts/test-endpoints.sh",
    "test:local": "scripts/test-endpoints.sh",
    "test:dev": "scripts/test-dev-mode.sh",
    "smoke:dev": "DOMAIN=http://localhost:3000 scripts/smoke-dev.sh",
    "smoke:prod": "scripts/smoke-prod.sh",
    "build:api": "cd adminer/apps/api && npm run build",
    "start:api": "cd adminer/apps/api && npm run start",
    "build": "cd adminer/apps/api && npm install && npm run build",
    "install": "cd adminer/apps/api && npm install"
  },
  "type": "module",
  "dependencies": {
    "jose": "^6.0.13"
  },
  "devDependencies": {
    "eslint-import-resolver-typescript": "^4.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
