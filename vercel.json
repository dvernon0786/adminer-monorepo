{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/dashboard/(.*)", "destination": "/index.html" },
    { "source": "/((?!api|_next|favicon.ico).*)", "destination": "/index.html" }
  ],
  "routes": [
    { "src": "/dashboard", "dest": "/index.html" },
    { "src": "/dashboard/(.*)", "dest": "/index.html" }
  ]
} 