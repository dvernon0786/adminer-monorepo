{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd apps/api && npm ci && npm run build",
  "outputDirectory": "apps/api/.next",
  "installCommand": "cd apps/api && npm ci",
  "framework": "nextjs",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/"
    }
  ]
} 