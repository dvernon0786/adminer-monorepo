{
  "version": 2,
  "framework": null,
  "buildCommand": "cd ../web && echo 'VITE_CLERK_PUBLISHABLE_KEY=pk_test_cGxlYXNlZC1maXNoLTI4LmNsZXJrLmFjY291bnRzLmRldiQ' > .env.local && npm install && npm run build && cd ../api && mkdir -p public && cp -r ../web/dist/* public/",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
